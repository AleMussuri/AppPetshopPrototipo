<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/gestprod"
        android:layout_width="135dp"
        android:layout_height="59dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:onClick="gestprod"
        android:text="Gestão de Produto"
        app:layout_constraintBottom_toTopOf="@+id/venda"
        app:layout_constraintEnd_toStartOf="@+id/gestpaciente"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gestpaciente"
        android:layout_width="135dp"
        android:layout_height="59dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="24dp"
        android:onClick="gestpaciente"
        android:text="Gestão de Paciente"
        app:layout_constraintBottom_toTopOf="@+id/venda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gestprod" />

    <Button
        android:id="@+id/consultagest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="28dp"
        android:onClick="consultagest"
        android:text="Gestão de Consultas"
        app:layout_constraintBottom_toTopOf="@+id/gestprod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/venda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="95dp"
        android:text="Vendas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="40dp"
        android:text="Menu Principal"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/consultagest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>