<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoPacienteActivity">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/txtanotacao"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Paciente"
                android:textSize="30sp"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/nomepet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Pet" />

            <TextView
                android:id="@+id/txttnomepet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" />

            <TextView
                android:id="@+id/racapet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raça" />

            <TextView
                android:id="@+id/txtacapet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"/>

            <TextView
                android:id="@+id/idadepet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Idade do Pet" />

            <TextView
                android:id="@+id/txtidadepet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Endereço" />

            <TextView
                android:id="@+id/txtendereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" />

            <TextView
                android:id="@+id/Cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contato" />

            <TextView
                android:id="@+id/txtcont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>